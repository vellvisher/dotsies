source ~/.git-completion.sh
source ~/.git-prompt.sh
source ~/.colors.sh

### Prompt ### start

export PS1='[\h \W$(__git_ps1 " (%s)")]\$ '

### Prompt ### end

### Environment variables ### start

if [[ -z $STUFF_DIR ]]; then
   export STUFF_DIR=~/stuff
fi

export PATH=~/local/bin:~/homebrew/bin:$PATH

### Environment variables ### end

### Functions ### start

err() {
  echo "[$(date +'%Y-%m-%dT%H:%M:%S%z')]: $@">&2
}

get_stuff_dir() {
  stuff_dir="${STUFF_DIR}"
  if [[ -z ${stuff_dir} ]]; then
    err "Error: STUFF_DIR env variable not set."
    return
  fi

  echo "${stuff_dir}"
}

cd_stuff() {
  cd $(get_stuff_dir)
}

get_inactive_dir() {
  echo "$(get_stuff_dir)/inactive"
}

get_active_dir() {
  echo "$(get_stuff_dir)/active"
}

cd_active() {
  cd $(get_active_dir)
}

cd_inactive() {
  cd $(get_inactive_dir)
}

archive() {
  source=$1
  if [[ -z $source ]]; then
    echo 'usage: archive path/to/file/to/archive'
    return
  fi
  mv "${source}" $(get_inactive_dir)
}

### Functions ### end

### Aliases ### start

alias ec="emacsclient -n"
alias a="cd_active"
alias i="cd_inactive"
alias t="tmux attach-session"
alias td="tmux attach-session -d"
alias tail_ios="tail -f ~/Library/Logs/iOS\ Simulator/7.1/system.log"
alias grep="grep --color=always"

### Aliases ### end
